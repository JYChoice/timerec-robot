<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.timerec.robot.mapper.ContentArticleMapper">

    <select id="checkArticle" parameterType="entity" resultType="int">
        SELECT count(1)
        FROM timerec.content_article a
        WHERE a.article_guid = #{entity.articleGuid}
    </select>

</mapper>